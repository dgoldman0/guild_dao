{
  "name": "guild-dao",
  "version": "1.0.0",
  "description": "Ranked Membership DAO with Treasury",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:fuzz": "forge test -vv",
    "test:all": "hardhat test && forge test -vv",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "slither": "slither .",
    "audit": "npm run lint && npm run slither && npm run coverage",
    "deploy:arbitrum-sepolia": "hardhat run scripts/deploy.js --network arbitrumSepolia",
    "verify": "hardhat verify --network arbitrumSepolia",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.4.1",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^2.3.0",
    "solhint": "^6.0.3",
    "solidity-coverage": "^0.8.17"
  }
}
